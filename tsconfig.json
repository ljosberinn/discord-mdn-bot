{
  "compilerOptions": {
    "lib": ["ESNext", "ESNext.Intl"],
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/*.d.ts"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts", "./src/*.d.ts"],
  "exclude": ["node_modules", "./src/**/__fixtures__/*"]
}
